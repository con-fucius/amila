# LLM Provider Configuration
# Choose between 'gemini' (development) or 'bedrock' (production)
# Default: gemini for local development
LLM_PROVIDER=gemini

# Google Gemini Configuration (Development/Testing)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# AWS Bedrock Configuration (Production)
# IMPORTANT: Replace with your actual AWS credentials
# TODO: Migrate to AWS IAM roles and Secrets Manager for production
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# Oracle Database Configuration
# TODO: Move to AWS Secrets Manager for production
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=XEPDB1
ORACLE_USERNAME=your_oracle_username
ORACLE_PASSWORD=your_oracle_password

# Application Security
# IMPORTANT: Generate a new JWT secret key for each environment
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3001

# Doris MCP Configuration
DORIS_MCP_ENABLED=false
DORIS_MCP_HOST=127.0.0.1
DORIS_MCP_PORT=8081
# Local path to Doris MCP Server (overrides git clone if set)
# Example: ./services/doris-mcp-server or /.doris-mcp-server
DORIS_MCP_SERVER_PATH=
DORIS_DB_HOST=localhost
DORIS_DB_PORT=9030
DORIS_DB_USER=root
DORIS_DB_PASSWORD=
DORIS_DB_DATABASE=demo

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://:your_redis_password@localhost:6379/0
REDIS_SESSION_DB=0
REDIS_CACHE_DB=1
REDIS_CELERY_DB=2

# Celery Task Queue
CELERY_BROKER_URL=redis://:your_redis_password@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:your_redis_password@localhost:6379/1

# Flower Monitoring
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# Apache Superset Configuration
SUPERSET_SECRET_KEY=your_superset_secret_key
SUPERSET_DB_PASSWORD=your_superset_db_password

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# LangGraph Configuration
LANGGRAPH_CHECKPOINT_DB=/app/data/checkpoints.db
LANGGRAPH_API_KEY=your_langgraph_api_key_here